@model TurmasAlunosApp.Models.Aluno

<h2>Editar Aluno</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TurmaId">Turma</label>
        <select asp-for="TurmaId" class="form-control" asp-items="@(new SelectList(ViewBag.Turmas, "Id", "Nome", Model.TurmaId))"></select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a class="btn btn-secondary" href="/Aluno">Voltar</a>
